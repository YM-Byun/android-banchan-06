<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="banchan"
            type="com.woowahan.domain.model.BanchanModel" />

        <variable
            name="holder"
            type="com.woowahan.banchan.ui.maindishbanchan.MainDishBanchanAdapter.MainDishBanchanVerticalViewHolder" />

        <variable
            name="isCartItem"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:loadImageUseCoil="@{banchan.imageUrl}"
            android:id="@+id/iv_menu_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/bg_image_placeholder" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_add_cart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="@dimen/round_btn_elevation"
            app:layout_constraintBottom_toBottomOf="@id/iv_menu_image"
            app:layout_constraintEnd_toEndOf="@id/iv_menu_image">

            <ImageView
                android:onClickListener="@{()-> holder.banchanInsertCartListener.invoke(banchan)}"
                android:id="@+id/iv_add_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@{isCartItem ? @drawable/ic_arrow_left : @drawable/ic_cart}" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="@{banchan.title}"
            android:id="@+id/tv_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textColor="@color/black_000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_menu_image"
            app:layout_constraintStart_toStartOf="@id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/iv_menu_image"
            tools:text="제품명" />

        <TextView
            android:text="@{banchan.description}"
            android:id="@+id/tv_menu_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:textColor="@color/grey_828282"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_menu_image"
            app:layout_constraintStart_toStartOf="@id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_name"
            tools:text="제품설명" />

        <LinearLayout
            android:id="@+id/layout_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="@id/iv_menu_image"
            app:layout_constraintStart_toStartOf="@id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_description">

            <TextView
                android:visibility="@{banchan.salePrice != null ? View.VISIBLE : View.GONE}"
                android:text="@{banchan.salePercent + `%`}"
                android:id="@+id/tv_discount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/orange_f46700"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="할인율" />

            <TextView
                android:text="@{banchan.salePrice != null ? banchan.salePrice : banchan.price}"
                android:id="@+id/tv_final_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="최종가격" />
        </LinearLayout>

        <TextView
            android:visibility="@{banchan.salePrice != null ? View.VISIBLE : View.INVISIBLE}"
            android:text="@{banchan.price}"
            android:id="@+id/tv_original_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:textColor="@color/grey_828282"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/iv_menu_image"
            app:layout_constraintStart_toStartOf="@id/iv_menu_image"
            app:layout_constraintTop_toBottomOf="@id/layout_menu"
            tools:text="정가" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>